<div class='container'>
    <% content_for :navbar do %>
    <div id = "header">
        <%= 
          render partial:"partials/navbar", 
          locals:{array:[{'CATEGORIES' => '#'}], 
          back:'#', out:destroy_user_session_path}%>
        </div>
    <% end %>
    <ul class="list_categories">
      <%@expense_categories.each_with_index do |exp_category|%>
       <li>
        <%=link_to user_expense_category_path(exp_category.user_id, exp_category) do %>
        <%=render partial:"partials/exp_category_item",
             locals: {exp_category: exp_category}%>
             <%end%>
       </li> 
      <%end%>
    </ul>
    <div class="btn_container">
      <%= 
     link_to 'Add new category', 
     new_user_expense_category_path(@user), 
     class: 'btn btn-outline-primary'%>
    </div>
</div>
  <%= render partial: "partials/errors", locals: { errors: @user.errors } %>